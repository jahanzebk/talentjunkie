!!!
%head
  %meta{'http-equiv'=>"content-type", :content=>"text/html;charset=UTF-8"}
  %meta{'http-equiv'=>"expires", :content=>"0"}
  %meta{'http-equiv'=>"pragma", :content=>"no-cache"}
  
  %title="#{@title} | app name"

  %script{:src => "http://www.google.com/jsapi?key=ABQIAAAACTzh5XmVIRbfdDNmLHvsvhTTj6W7sQjONiOLDIxGBdWuBlqN8RQ0uIecSNFUBG0rYraShlbQAH6q_A", :type=>"text/javascript"}
  :javascript
    google.load("jquery", "1.3.2");
    google.load("jqueryui", "1.7.2");

  = stylesheet_link_tag 'application', 'header_and_footer', 'headers', 'links_and_buttons', 'navigation', 'forms', 'login', 'signup', 'user', 'organization', 'in_place', 'wizard', :cache => "app_css"
  = javascript_include_tag  'application', 'jquery/jquery.liveSearch.js', 'jquery/jquery.json.js', :cache => "app_js"


%body
  #header
    = render :partial => "/common/header"
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
  #content
    = yield
    %br
  #footer
    %br
