!!!
%head
  %meta{'http-equiv'=>"content-type", :content=>"text/html;charset=UTF-8"}
  %meta{'http-equiv'=>"expires", :content=>"0"}
  %meta{'http-equiv'=>"pragma", :content=>"no-cache"}
  
  %title="#{@title} | app name"

  //%script{:src => "http://www.google.com/jsapi?key=ABQIAAAACTzh5XmVIRbfdDNmLHvsvhTTj6W7sQjONiOLDIxGBdWuBlqN8RQ0uIecSNFUBG0rYraShlbQAH6q_A", :type=>"text/javascript"}
  :javascript
    //google.load("jquery", "1.3.2");
    //google.load("jqueryui", "1.7.2");

  = stylesheet_link_tag 'application', 'header_and_footer', 'headers', 'links_and_buttons', 'navigation', 'search', 'forms', 'lightbox', 'login', 'signup', 'user', 'organization', 'opening', 'contract', 'in_place', 'wizard', :cache => "app_css"
  = javascript_include_tag  'jquery.js', 'jquery-ui.js', 'application', 'forms', 'jquery/jquery.blockUI.js', 'jquery/jquery.json.js', :cache => "app_js"


  :javascript
      jQuery.blockUI.defaults.overlayCSS.backgroundColor = "#666666"
      jQuery.blockUI.defaults.css.backgroundColor = '#FFFFFF';
      jQuery.blockUI.defaults.css.textAlign = '';
      jQuery.blockUI.defaults.css.padding = '0px';
      jQuery.blockUI.defaults.css.color = '';
      jQuery.blockUI.defaults.css.border = '5px solid #242F33';
      jQuery.blockUI.defaults.css.cursor = '';
      jQuery.blockUI.defaults.css.top = '20%';
      jQuery.blockUI.defaults.css.left = '25%';
      jQuery.blockUI.defaults.css.width = '50%';

%body
  #header
    = render :partial => "/common/header"
  #content
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    = yield
    %br
  #footer
    %br
