#connections.sidebox
  %h5="Connections - #{@user.network_users.size} connection#{'s' if @user.network_users.size != 1}"
  - @user.top_network_users.each do |user|
    .connection
      .photo
        =image_tag user.get_photo_url, :width => "45"
      .name
        =link_to user.full_name, "/profile/#{user.id}"
      .position
        - contract = user.contracts.current.first
        - if contract
          %span.title="#{contract.position.title}"
          at 
          %span.organization="#{link_to contract.position.organization.name, organization_path(contract.position.organization)}"
          in
          %span.town="#{contract.city.name}, #{contract.city.country.name}"
  %br