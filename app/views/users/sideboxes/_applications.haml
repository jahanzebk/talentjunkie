#applications.sidebox
  %h5 Applications
  - @user.applications.each do |application|
    - contract = application.contract
    %br
    .contract
      %p.title
        %span.position="#{link_to contract.position.title, organization_opening_path(contract.position.organization, contract)}"
        at 
        %span.organization_name="#{link_to contract.position.organization.name, organization_path(contract.position.organization)}"
      - if contract.city.present?
        %p.town="in #{contract.city.name}, #{contract.city.country.name}"
      %p{:style => "font-size: 0.8em; margin-top: 5px"}="You applied to this position on #{application.created_at.strftime('%A, %B %e %Y')}"