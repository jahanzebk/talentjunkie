#communities.sidebox
  %h5 Communities
  %h6="Member of #{user.communities.size} #{user.communities.size == 1 ? 'community' : 'communities'}"
  - user.communities.each do |community|
    =link_to community.name, community_path(community)
  %p=link_to("Explore other communities", communities_path) if user == current_user
  %br
