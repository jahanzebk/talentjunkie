- form_for @user do |f|
  = f.error_messages 
  %p
    = f.label :email
    = f.text_field :primary_email
  %p
    = f.label :first_name
    = f.text_field :first_name 
  %p
    = f.label :last_name 
    = f.text_field :last_name 
  %p
    = f.label 'Date of birth'
    = f.text_field :dob, :class => 'datepicker_form_field'
  %p
    = f.label :password
    = f.password_field :password

  %p= f.submit "Submit" 

:javascript
  jQuery(document).ready(function()
  {
    jQuery(".datepicker_form_field").datepicker();
  })  
