#content-main-container
  #content-main
    #profile
      #user-summary
        %h1.name=@user.full_name
        - if @user.contracts.current.count > 0
          - @user.contracts.current.each do |contract|
            %p
              %span.title="#{contract.position.title}"
              at 
              %span.organization="#{link_to contract.position.organization.name, organization_path(contract.position.organization)}"
              %span.dates="  (#{Date::MONTHNAMES[contract.from_month]} #{contract.from_year} - #{contract.to_month.blank? ? 'Present' : Date::MONTHNAMES[contract.to_month]} #{contract.to_year})"

      #experience
        %h4 Experience
        - if @user.contracts.count > 0
          - @user.contracts.each do |contract|
            .contract
              %p.title
                %span.position="#{contract.position.title}"
                at 
                %span.organization="#{link_to contract.position.organization.name, organization_path(contract.position.organization)}"
                %p
                  ="#{Date::MONTHNAMES[contract.from_month]} #{contract.from_year} - #{contract.to_month.blank? ? 'Present' : Date::MONTHNAMES[contract.to_month]} #{contract.to_year}"
        %p.button.add= link_to "Add position", new_user_contract_path(@user)
      #education
        %h4 Education
        - if @user.diplomas.count > 0
          - @user.diplomas.each do |diploma|
            .diploma
              %p.title
                %span.degree="#{diploma.degree.degree}"
                in
                %span.major="#{diploma.degree.major}"
                from
                %span.organization="#{link_to diploma.degree.organization.name, organization_path(diploma.degree.organization)}"
                %p
                  ="#{Date::MONTHNAMES[diploma.from_month]} #{diploma.from_year} - #{diploma.to_month.blank? ? 'Present' : Date::MONTHNAMES[diploma.to_month]} #{diploma.to_year}"
        %p.button.add=link_to "Add education", new_user_diploma_path(@user)
                
#sidebar
  =render :partial => "/common/side/my_organizations.haml", :locals => { :user => @user}

  #actions.sidebox
    %h5 Actions
    %ul
      %li=link_to "Import profile from LinkedIn", :controller => "imports", :action => :new
  #applications.sidebox
    %h5 My Job Applications
    - @user.applications.each do |application|
      %ul
        %li
          %span.title=application.contract.position.title
  #postings.sidebox
    %h5 My Job Postings
    - @user.postings.each do |posting|
      %ul
        %li
          %span.title=link_to posting.position.title, organization_position_contract_path(posting.position.organization, posting.position, posting.id)
          %span.applicants="(#{posting.applicants.count} applicant)"
  = render :partial => "connections"          
  = render :partial => "pending_connection_requests" if @user.connections_pending.size > 0