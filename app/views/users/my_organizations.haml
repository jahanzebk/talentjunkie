#content-header-container.user-profile
  #content-header
    #user-profile-header
      =render :partial => "my_profile_summary.haml"      
      #tabs
        #tabs-el  
          %ul
            %li.first
              %a{:href => "/my/newsfeed"}
                .anchor_area
                  %span.title News Feed
                  %span.tagline Latest news & events
            %li
              %a{:href => "/my/profile"}
                .anchor_area
                  %span.title Profile
                  %span.tagline Experience & Education
            %li.selected
              %span.title My Organizations
              %span.tagline Organizations & Openings
          %br
          
#content-main-container
  #content-main-wrapper
    #content-main
      #organizations
        - @user.organizations_active.each do |organization|
          .organization
            %h3="#{link_to organization.name, organization_path(organization)}"
            %p.industry=organization.industry.name if organization.industry
            .open-positions
              %h4="Latest job openings at #{organization.name}"
              = render :partial => "/organizations/show/open_position.haml", :collection => @user.postings_for(organization)
            
              %p.button.add= link_to "Add a new job opening at #{organization.name}", new_organization_opening_path(organization)
            
            



  #sidebar
    = render :partial => "connections"          
    = render :partial => "pending_connection_requests" if @user.connections_pending.size > 0