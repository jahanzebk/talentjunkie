#summary-description
  - if @user.detail.summary
    %p.summary=@user.detail.summary
  - elsif @user == current_user
    %p.summary.note add a summary to your profile
  %span.actions
    =link_to_remote("edit", :url => "/users/#{@user.id}/edit", :method => "GET") if @user == current_user
#experience
  %h4 Experience
  .detail
    - if user.contracts.count > 0
      - user.contracts.each do |contract|
        .contract
          - if current_user == user
            %p.actions
              =link_to_remote "edit", :url => edit_user_contract_path(user, contract), :method => "GET"
              ="."
              =link_to "delete", user_contract_path(user, contract), {:confirm => "Are you sure you want to delete this entry?", :method => "DELETE"}
          %p.title
            %span.position="#{contract.position.title}"
            at 
            %span.organization_name="#{link_to contract.position.organization.name, organization_path(contract.position.organization)}"
            %p.dates
              ="#{Date::MONTHNAMES[contract.from_month]} #{contract.from_year} - #{contract.to_month.blank? ? 'Present' : Date::MONTHNAMES[contract.to_month]} #{contract.to_year}"
          %p.description
            - if contract.description.present?
              =contract.description
            - elsif current_user == user
              = link_to_remote "add a description to this position", :url => edit_user_contract_path(user, contract), :method => "GET"
    - if current_user == user
      %p.button.add=link_to_remote "Add a new position", :url => new_user_contract_path(user), :method => :get
    %br