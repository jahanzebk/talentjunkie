#content-header-container.user-profile
  #content-header
    #user-profile-header
      =render :partial => "/users/show/public/profile_summary.haml"
          
#content-main-container
  #content-main-wrapper
    = render :partial => "/users/show/user/navigation.haml", :locals => {:user => @user}
  
    #content-main
      #my-organizations
        - @user.organizations_active.each do |organization|
          = render :partial => '/users/sideboxes/organization.haml', :locals => { :organization => organization}
          = render :partial => '/organizations/show/open_positions.haml', :locals => { :organization => organization}
  
  = render :partial => "/users/show/user/sidebar", :locals => {:user => @user}