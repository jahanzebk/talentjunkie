%h1="Positions at #{@organization.name}"

-@organization.positions.each do |position|
  %p
    =link_to position.title, organization_position_path(@organization, position)
    / - if position.openings.count > 0
    /   %span="(#{position.openings.count} opening#{'s' if position.openings.count != 1})"
%br
%p=link_to "Add a new position", new_organization_position_path(@organization)