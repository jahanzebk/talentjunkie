- start_date ||= Date.today
- end_date ||= Date.today
#diploma_from.form-subsection.left
  %label From
  = select_month(start_date, {}, {:name => "diploma[from][month]", :autocomplete => "off"})
  = select_year(start_date, {:start_year => 1900, :end_year => (Date.today.year + 1)}, {:name => "diploma[from][year]", :autocomplete => "off"})
#diploma_to.form-subsection.left
  %label To
  = select_month(end_date, {}, {:name => "diploma[to][month]", :autocomplete => "off"})
  = select_year(end_date, {:start_year => 1900, :end_year => (Date.today.year + 10)}, {:name => "diploma[to][year]", :autocomplete => "off"})