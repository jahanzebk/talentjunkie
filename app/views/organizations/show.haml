#content-header-container.organization-profile
  #content-header
    #organization
      #summary
        %h1=@organization.name
        %p.industry=@organization.industry.name if @organization.industry
        %br
        - if current_user.belongs_to?(@organization)
          %p.me You work here.
              
#content-main-container
  #content-main-wrapper
    #content-main
      #description
        %p.description=@organization.description

      #current-employees
        %h4 Current employees
        - @organization.contracts.current.each do |contract|
          .employee
            %span.name="#{contract.user.full_name}"
            %span.title=" - #{contract.position.title} "
            %span.dates="since #{Date::MONTHNAMES[contract.from_month]} #{contract.from_year}"

      #recent-changes
        %h4 Recent promotions and changes
  
      #new-employees
        %h4 New Hires
  
      #former-employees
        %h4 Former employees

      =render :partial => "/organizations/show/open_positions.haml", :locals => { :organization => @organization }
  
  #sidebar
    .following-status
      - if current_user.is_following_organization?(@organization)
        .already-following
          %p="You are following #{@organization.name}"
      - else
        .start-following
          %span.actions=link_over_ajax "Follow #{@organization.name}", "/organizations/#{@organization.id}/follow"
        #form-processing.hide
          %p Processing...
        #form-error.hide
          %p An error has occurred. Please try again later.
        #form-success.hide
          %p="You are now following #{@organization.name}"
    = render :partial => "following_summary", :locals => {:organization => @organization}

:javascript
  function handle_request(anchor)
  {
    var anchor = jQuery(anchor);
    var url = anchor.attr('href');

    jQuery.ajax(
    {
      url: url,
      type: "POST",
      dataType: "json",
      beforeSend: function()
      {
        jQuery("#form-error").hide();
        jQuery(".start-following").hide();
        jQuery("#form-processing").show();
      },
      complete: function()
      {
        jQuery("#form-processing").hide();
      },
      error: function(XMLHttpRequest, textStatus, errorThrown)
      {
        var error = jQuery.evalJSON(XMLHttpRequest.responseText);

        var messages = "";

        jQuery.each(error, function()
        {
          field         = jQuery("#user_" + jQuery(this)[0]);
          error_message = jQuery(this)[1];
          label         = field.attr("field_name");

          field.addClass("error");
          messages += label + " " + error_message + "<br />";
        })

        if(messages)
          jQuery("#form-error").html(messages);
        jQuery("#form-error").fadeIn("slow");

      },
      success: function(json, textStatus)
      {
        jQuery("#form-processing").hide(10, function(){jQuery("#form-success").show()});
      }
    });    
    return false;
  }