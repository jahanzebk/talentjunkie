%p.opening
  %p.title
    =open_position.title
    - if open_position.openings.count > 1
      %span.small="(#{open_position.openings.count} openings)"
  %table.contracts
    %thead
      %tr
        %th Starting
        %th
        %th
    %tbody
      - open_position.openings.each do |opening|
        %tr
          %td="Starting #{opening.from_month.blank? ? 'now' : Date::MONTHNAMES[opening.from_month]} #{opening.from_year} #{opening.to_month.blank? ? '' : Date::MONTHNAMES[opening.to_month]} #{opening.to_year}"
          %td="#{opening.contract_type.name if opening.contract_type} / #{opening.contract_periodicity_type.name if opening.contract_periodicity_type}"
          %td Apply