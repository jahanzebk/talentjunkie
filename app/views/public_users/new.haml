#content-main-container
  #content-main
    %h2=@title

    = error_messages_for :user

    - form_tag "/signup" do
      .form-section  
        %span.form-section-title Email
        = text_field_tag "user[primary_email]", "", {:autocomplete => "off", :hint => "A valid email address"}
        %span.form-section-title Password
        = password_field_tag "user[password]", "", {:autocomplete => "off"}
      .form-section-actions
        =submit_tag "sign up"
