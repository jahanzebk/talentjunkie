#content-header-container.opening
  #content-header
    #organization-profile-header
      =render :partial => "/organizations/show/user/profile_summary.haml", :locals => {:organization => @organization}

#content-main-container
  #content-main-wrapper
    = render :partial => "/organizations/show/user/navigation.haml", :locals => {:organization => @organization}
    #content-main
      #opening-main-section
        .opening
          = render :partial => "/openings/summary.haml"
          .description
            %h4 The job
            %p=@contract.description
          - if @contract.benefits
            .other-benefits
              %h4 Perks & benefits
              %p=@contract.benefits

  #sidebar
    %p.posted_on
      ="Posted on"
      %span.date="#{@contract.created_at.strftime('%B %d')}"
      ="by"
      %span.posted_by=link_to @contract.posted_by.full_name, person_path(@contract.posted_by)
      
    %br
    
    - if current_user.applied_to?(@contract)
      %p.applied
        ="You applied for this position on"
        %span.applied_on=current_user.application_for(@contract).created_at.strftime('%B %d')

    = render :partial => "/openings/sideboxes/public_actions", :locals => {:organization => @organization}
    = render :partial => "/openings/sideboxes/actions", :locals => {:organization => @organization} if current_user.belongs_to?(@organization)